#!/usr/bin/env bash

./build

source .env
export DOCKER_NETWORK PUBLIC_URL

docker stop ${PWD##*/}

docker rm ${PWD##*/}

docker run -d \
    -e VIRTUAL_HOST=$PUBLIC_URL \
    -v $PWD/dist:/usr/share/nginx/html \
    -v $PWD/site.conf:/etc/nginx/conf.d/site.conf \
    --name ${PWD##*/} \
    --network $DOCKER_NETWORK \
    --restart always \
    nginx:alpine
